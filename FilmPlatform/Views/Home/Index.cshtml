@model List<MovieLibrary.Models.Movie>
@{
    ViewData["Title"] = "Головна";
}

<!-- Hero секція -->
<div class="text-center py-5 mb-5">
    <h1 class="display-3 fw-bold mb-3">
        <i class="bi bi-film text-danger"></i> MovieLibrary
    </h1>
    <p class="lead mb-4" style="color: #adb5bd; max-width: 600px; margin: 0 auto;">
        Твоя персональна колекція фільмів та серіалів. 
        Відстежуй що дивишся, плануй що подивитись, оцінюй переглянуте.
    </p>
    
    @if (User.Identity?.IsAuthenticated != true)
    {
        <div class="d-flex justify-content-center gap-3 flex-wrap mt-4">
            <a asp-controller="Account" asp-action="Register" class="btn btn-accent btn-lg px-4">
                <i class="bi bi-person-plus"></i> Створити акаунт
            </a>
            <a asp-controller="Movies" asp-action="Index" class="btn-light btn-lg px-4">
                <i class="bi bi-search"></i> Переглянути каталог
            </a>
        </div>
    }
    else
    {
        <div class="d-flex justify-content-center gap-3 flex-wrap mt-4">
            <a asp-controller="Library" asp-action="Index" class="btn btn-accent btn-lg px-4">
                <i class="bi bi-bookmark-star"></i> Моя бібліотека
            </a>
            <a asp-controller="Movies" asp-action="Index" class="btn btn-light btn-lg px-4">
                <i class="bi bi-plus-lg"></i> Додати фільми
            </a>
        </div>
    }
</div>

<!-- Можливості -->
<div class="row g-4 mb-5">
    <div class="col-md-4">
        <div class="card h-100 text-center p-4">
            <div class="card-body">
                <i class="bi bi-collection-play display-4 text-primary mb-3"></i>
                <h5 class="card-title">Каталог фільмів</h5>
                <p class="card-text">Переглядай каталог фільмів та серіалів, шукай за назвою та фільтруй за типом.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100 text-center p-4">
            <div class="card-body">
                <i class="bi bi-bookmark-star display-4 text-warning mb-3"></i>
                <h5 class="card-title">Особиста бібліотека</h5>
                <p class="card-text">Додавай фільми до своєї колекції та відстежуй статус перегляду.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100 text-center p-4">
            <div class="card-body">
                <i class="bi bi-star display-4 text-success mb-3"></i>
                <h5 class="card-title">Оцінки та нотатки</h5>
                <p class="card-text">Став оцінки переглянутому та залишай персональні нотатки.</p>
            </div>
        </div>
    </div>
</div>

<!-- Статуси перегляду -->
<div class="card mb-5">
    <div class="card-body p-4">
        <h4 class="text-center mb-4">Статуси перегляду</h4>
        <div class="d-flex justify-content-center flex-wrap gap-3">
            <span class="badge status-plantowatch px-3 py-2">
                <i class="bi bi-clock"></i> Переглянути пізніше
            </span>
            <span class="badge status-watching px-3 py-2">
                <i class="bi bi-play-circle"></i> Дивлюся
            </span>
            <span class="badge status-completed px-3 py-2">
                <i class="bi bi-check-circle"></i> Переглянуто
            </span>
            <span class="badge status-onhold px-3 py-2">
                <i class="bi bi-pause-circle"></i> На паузі
            </span>
            <span class="badge status-dropped px-3 py-2">
                <i class="bi bi-x-circle"></i> Кинув
            </span>
        </div>
    </div>
</div>

<!-- Топ фільмів якщо є -->
@if (Model != null && Model.Any())
{
    <h2 class="mb-4"><i class="bi bi-star-fill text-warning"></i> Топ рейтинг</h2>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var movie in Model)
        {
            <div class="col">
                <div class="card h-100">
                    @if (!string.IsNullOrEmpty(movie.PosterUrl))
                    {
                        <img src="@movie.PosterUrl" class="card-img-top" alt="@movie.Title" style="height: 200px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="card-img-top poster-placeholder" style="height: 200px;">
                            <i class="bi bi-film"></i>
                        </div>
                    }
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title mb-0">@movie.Title</h5>
                            <span class="badge @(movie.Type == MovieLibrary.Models.MediaType.Movie ? "badge-movie" : "badge-series")">
                                @(movie.Type == MovieLibrary.Models.MediaType.Movie ? "Фільм" : "Серіал")
                            </span>
                        </div>
                        <p class="card-text small">
                            @movie.Year • @movie.Genre
                        </p>
                        @if (movie.Rating.HasValue)
                        {
                            <p class="mb-0">
                                <i class="bi bi-star-fill text-warning"></i>
                                <strong>@movie.Rating.Value.ToString("F1")</strong>
                            </p>
                        }
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id" 
                           class="btn btn-accent w-100">
                            Детальніше
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <!-- Якщо фільмів ще немає в базі -->
    <div class="text-center py-4">
        <a asp-controller="Movies" asp-action="Index" class="btn btn-light btn-lg">
            <i class="bi bi-arrow-right"></i> Перейти до каталогу
        </a>
    </div>
}
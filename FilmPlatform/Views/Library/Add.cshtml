@model MovieLibrary.ViewModels.Library.AddToLibraryViewModel
@{
    ViewData["Title"] = "Додати до бібліотеки";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body p-4">
                <h2 class="mb-4">
                    <i class="bi bi-bookmark-plus text-danger"></i> Додати до бібліотеки
                </h2>
                
                @if (Model.Movie != null)
                {
                    <div class="d-flex gap-3 mb-4 p-3 rounded" style="background: rgba(0,0,0,0.2);">
                        @if (!string.IsNullOrEmpty(Model.Movie.PosterUrl))
                        {
                            <img src="@Model.Movie.PosterUrl" alt="@Model.Movie.Title" 
                                 style="width: 80px; height: 120px; object-fit: cover;" class="rounded">
                        }
                        <div>
                            <h5 class="mb-1">@Model.Movie.Title</h5>
                            <p class="text-muted small mb-0">
                                @Model.Movie.Year • @Model.Movie.Genre
                            </p>
                            <span class="badge @(Model.Movie.Type == MovieLibrary.Models.MediaType.Movie ? "badge-movie" : "badge-series")">
                                @(Model.Movie.Type == MovieLibrary.Models.MediaType.Movie ? "Фільм" : "Серіал")
                            </span>
                        </div>
                    </div>
                }
                
                <form asp-action="Add" method="post">
                    <input type="hidden" asp-for="MovieId">
                    
                    <div class="mb-3">
                        <label asp-for="Status" class="form-label"></label>
                        <select asp-for="Status" class="form-select">
                            <option value="@MovieLibrary.Models.WatchStatus.PlanToWatch">Переглянути пізніше</option>
                            <option value="@MovieLibrary.Models.WatchStatus.Watching">Дивлюся</option>
                            <option value="@MovieLibrary.Models.WatchStatus.Completed">Переглянуто</option>
                            <option value="@MovieLibrary.Models.WatchStatus.OnHold">На паузі</option>
                            <option value="@MovieLibrary.Models.WatchStatus.Dropped">Кинув</option>
                        </select>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="UserRating" class="form-label"></label>
                        <input asp-for="UserRating" type="number" min="1" max="10" class="form-control" 
                               placeholder="1-10">
                        <span asp-validation-for="UserRating" class="text-danger small"></span>
                    </div>
                    
                    <div class="mb-4">
                        <label asp-for="Notes" class="form-label"></label>
                        <textarea asp-for="Notes" class="form-control" rows="3" 
                                  placeholder="Ваші думки про фільм..."></textarea>
                    </div>
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-accent">
                            <i class="bi bi-plus-lg"></i> Додати
                        </button>
                        <a asp-controller="Movies" asp-action="Index" class="btn btn-light">
                            Скасувати
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
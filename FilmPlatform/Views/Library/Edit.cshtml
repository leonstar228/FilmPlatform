@model MovieLibrary.ViewModels.Library.AddToLibraryViewModel
@{
    ViewData["Title"] = "Редагувати";
    var userMovieId = (int)ViewData["UserMovieId"]!;
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body p-4">
                <h2 class="mb-4">
                    <i class="bi bi-pencil text-danger"></i> Редагувати
                </h2>
                
                @if (Model.Movie != null)
                {
                    <div class="d-flex gap-3 mb-4 p-3 rounded" style="background: rgba(0,0,0,0.2);">
                        @if (!string.IsNullOrEmpty(Model.Movie.PosterUrl))
                        {
                            <img src="@Model.Movie.PosterUrl" alt="@Model.Movie.Title" 
                                 style="width: 80px; height: 120px; object-fit: cover;" class="rounded">
                        }
                        <div>
                            <h5 class="mb-1">@Model.Movie.Title</h5>
                            <p class="text-muted small mb-0">@Model.Movie.Year</p>
                        </div>
                    </div>
                }
                
                <form asp-action="Edit" asp-route-id="@userMovieId" method="post">
                    <input type="hidden" asp-for="MovieId">
                    
                    <div class="mb-3">
                        <label asp-for="Status" class="form-label"></label>
                        <select asp-for="Status" class="form-select">
                            <option value="@MovieLibrary.Models.WatchStatus.PlanToWatch">Переглянути пізніше</option>
                            <option value="@MovieLibrary.Models.WatchStatus.Watching">Дивлюся</option>
                            <option value="@MovieLibrary.Models.WatchStatus.Completed">Переглянуто</option>
                            <option value="@MovieLibrary.Models.WatchStatus.OnHold">На паузі</option>
                            <option value="@MovieLibrary.Models.WatchStatus.Dropped">Кинув</option>
                        </select>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="UserRating" class="form-label"></label>
                        <input asp-for="UserRating" type="number" min="1" max="10" class="form-control">
                        <span asp-validation-for="UserRating" class="text-danger small"></span>
                    </div>
                    
                    <div class="mb-4">
                        <label asp-for="Notes" class="form-label"></label>
                        <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                    </div>
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-accent">
                            <i class="bi bi-check-lg"></i> Зберегти
                        </button>
                        <a asp-action="Index" class="btn btn-light">
                            Скасувати
                        </a>
                    </div>
                </form>
                
                <hr class="my-4">
                
                <form asp-action="Remove" asp-route-id="@userMovieId" method="post" 
                      onsubmit="return confirm('Видалити з бібліотеки?');">
                    <button type="submit" class="btn btn-outline-danger">
                        <i class="bi bi-trash"></i> Видалити з бібліотеки
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
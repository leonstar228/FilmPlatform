@model MovieLibrary.ViewModels.Library.LibraryViewModel
@{
    ViewData["Title"] = "Моя бібліотека";
}

<h1 class="mb-4"><i class="bi bi-bookmark-star text-danger"></i> Моя бібліотека</h1>

<!-- Фільтри -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label">Пошук</label>
                <input type="text" name="search" class="form-control" 
                       placeholder="Назва..." value="@Model.SearchQuery">
            </div>
            <div class="col-md-3">
                <label class="form-label">Статус</label>
                <select name="status" class="form-select">
                    <option value="">Всі</option>
                    <option value="@MovieLibrary.Models.WatchStatus.PlanToWatch" 
                            selected="@(Model.CurrentFilter == MovieLibrary.Models.WatchStatus.PlanToWatch)">
                        Переглянути пізніше
                    </option>
                    <option value="@MovieLibrary.Models.WatchStatus.Watching"
                            selected="@(Model.CurrentFilter == MovieLibrary.Models.WatchStatus.Watching)">
                        Дивлюся
                    </option>
                    <option value="@MovieLibrary.Models.WatchStatus.Completed"
                            selected="@(Model.CurrentFilter == MovieLibrary.Models.WatchStatus.Completed)">
                        Переглянуто
                    </option>
                    <option value="@MovieLibrary.Models.WatchStatus.OnHold"
                            selected="@(Model.CurrentFilter == MovieLibrary.Models.WatchStatus.OnHold)">
                        На паузі
                    </option>
                    <option value="@MovieLibrary.Models.WatchStatus.Dropped"
                            selected="@(Model.CurrentFilter == MovieLibrary.Models.WatchStatus.Dropped)">
                        Кинув
                    </option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Тип</label>
                <select name="type" class="form-select">
                    <option value="">Всі</option>
                    <option value="@MovieLibrary.Models.MediaType.Movie"
                            selected="@(Model.TypeFilter == MovieLibrary.Models.MediaType.Movie)">
                        Фільми
                    </option>
                    <option value="@MovieLibrary.Models.MediaType.Series"
                            selected="@(Model.TypeFilter == MovieLibrary.Models.MediaType.Series)">
                        Серіали
                    </option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-accent w-100">
                    <i class="bi bi-funnel"></i> Фільтр
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Швидкі фільтри по статусу -->
<div class="mb-4">
    <a href="@Url.Action("Index")" class="btn btn-sm @(Model.CurrentFilter == null ? "btn-accent" : "btn-light") me-1">
        Всі (@Model.Items.Count)
    </a>
    <a href="@Url.Action("Index", new { status = MovieLibrary.Models.WatchStatus.Watching })" 
       class="btn btn-sm @(Model.CurrentFilter == MovieLibrary.Models.WatchStatus.Watching ? "status-watching" : "btn-outline-warning") me-1">
        <i class="bi bi-play-circle"></i> Дивлюся
    </a>
    <a href="@Url.Action("Index", new { status = MovieLibrary.Models.WatchStatus.PlanToWatch })" 
       class="btn btn-sm @(Model.CurrentFilter == MovieLibrary.Models.WatchStatus.PlanToWatch ? "status-plantowatch" : "btn-outline-primary") me-1">
        <i class="bi bi-clock"></i> Пізніше
    </a>
    <a href="@Url.Action("Index", new { status = MovieLibrary.Models.WatchStatus.Completed })" 
       class="btn btn-sm @(Model.CurrentFilter == MovieLibrary.Models.WatchStatus.Completed ? "status-completed" : "btn-outline-success") me-1">
        <i class="bi bi-check-circle"></i> Переглянуто
    </a>
</div>

@if (!Model.Items.Any())
{
    <div class="text-center py-5">
        <i class="bi bi-inbox display-1 text-muted"></i>
        <h3 class="mt-3">Бібліотека порожня</h3>
        <p class="text-muted">Додайте фільми з каталогу</p>
        <a asp-controller="Movies" asp-action="Index" class="btn btn-accent">
            <i class="bi bi-plus-lg"></i> Перейти до каталогу
        </a>
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model.Items)
        {
            <div class="col">
                <div class="card h-100">
                    @if (!string.IsNullOrEmpty(item.PosterUrl))
                    {
                        <img src="@item.PosterUrl" class="card-img-top" alt="@item.Title" 
                             style="height: 180px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="card-img-top poster-placeholder" style="height: 180px;">
                            <i class="bi bi-film"></i>
                        </div>
                    }
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h6 class="card-title mb-0">@item.Title</h6>
                            <span class="badge @(item.Type == MovieLibrary.Models.MediaType.Movie ? "badge-movie" : "badge-series")">
                                @(item.Type == MovieLibrary.Models.MediaType.Movie ? "Ф" : "С")
                            </span>
                        </div>
                        <p class="text-muted small mb-2">@item.Year</p>
                        
                        <span class="badge status-@item.Status.ToString().ToLower()">
                            @GetStatusName(item.Status)
                        </span>
                        
                        @if (item.UserRating.HasValue)
                        {
                            <span class="ms-2">
                                <i class="bi bi-star-fill text-warning"></i> @item.UserRating/10
                            </span>
                        }
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <div class="btn-group w-100" role="group">
                            <a asp-action="Edit" asp-route-id="@item.UserMovieId" 
                               class="btn btn-light btn-sm">
                                <i class="bi bi-pencil"></i>
                            </a>
                            
                            <!-- Швидка зміна статусу -->
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-light btn-sm dropdown-toggle" 
                                        data-bs-toggle="dropdown">
                                    <i class="bi bi-arrow-repeat"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-dark">
                                    @foreach (MovieLibrary.Models.WatchStatus status in Enum.GetValues<MovieLibrary.Models.WatchStatus>())
                                    {
                                        <li>
                                            <form asp-action="UpdateStatus" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@item.UserMovieId">
                                                <input type="hidden" name="status" value="@status">
                                                <button type="submit" class="dropdown-item @(item.Status == status ? "active" : "")">
                                                    @GetStatusName(status)
                                                </button>
                                            </form>
                                        </li>
                                    }
                                </ul>
                            </div>
                            
                            <form asp-action="Remove" asp-route-id="@item.UserMovieId" method="post" 
                                  onsubmit="return confirm('Видалити з бібліотеки?');" class="d-inline">
                                <button type="submit" class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@functions {
    string GetStatusName(MovieLibrary.Models.WatchStatus status)
    {
        return status switch
        {
            MovieLibrary.Models.WatchStatus.PlanToWatch => "Переглянути пізніше",
            MovieLibrary.Models.WatchStatus.Watching => "Дивлюся",
            MovieLibrary.Models.WatchStatus.Completed => "Переглянуто",
            MovieLibrary.Models.WatchStatus.OnHold => "На паузі",
            MovieLibrary.Models.WatchStatus.Dropped => "Кинув",
            _ => status.ToString()
        };
    }
}